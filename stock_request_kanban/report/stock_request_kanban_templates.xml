<odoo>
    <template id="report_simple_label">
        <div class="col-xs-3" style="padding:0;height:350px;">
            <div class="col-xs-6"
                 style="height:30%; border: 2px solid black;">
                <strong t-field="o.product_id.default_code"
                        t-if="o.product_id.default_code"/>
            </div>
            <div class="col-xs-6"
                 style="height:30%; border: 2px solid black;">
                <strong t-field="o.location_id.display_name"/>
            </div>
            <div class="col-xs-12"
                 style="height:40%; border: 2px solid black;">
                <strong t-field="o.product_id.name"/>
            </div>
            <div class="col-xs-6"
                 style="height:20%; border: 2px solid black;">
                    <span t-esc="float(o.product_qty)"/>
                    <span t-field="o.product_id.uom_id.name"/>
            </div>
            <div class="col-xs-6"
                 style="height:20%; border: 2px solid black;">
                    <span t-esc="float(o.product_uom_qty)"/>
                    <span t-field="o.product_uom_id.name"/>
            </div>
            <div class="col-xs-12"
                 style="height:10%">
                <img t-att-src="'/report/barcode/%s/%s?width=%s&amp;height=%s' % ('Extended39', o.name, 320, 20)"
                     style="height:80%; width: 100%;"
                />
            </div>
    </div>
</template>

<template id="report_productlabel">
<t t-call="web.basic_layout">
    <div class="page">
        <t t-foreach="docs" t-as="o">
            <t t-call="stock_request_kanban.report_simple_label">
                <t t-set="o" t-value="o"/>
            </t>
        </t>
    </div>
</t>
</template>

<report
id="action_report_kanban"
string="Print kanban"
model="stock.request.kanban"
report_type="qweb-pdf"
name="stock_request_kanban.report_productlabel"
file="stock_request_kanban.report_productlabel"
paperformat="stock_request_kanban.kanban_paper_format"
menu="True"/>
        </odoo>
