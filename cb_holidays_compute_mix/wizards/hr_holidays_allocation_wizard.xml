<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_holidays_allocation_wizard" model="ir.ui.view">
        <field name="name">hr.holidays.allocation.wizard.form"</field>
        <field name="model">hr.holidays.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Allocations">
                <group>
                    <group>
                        <field name="holiday_status_id"/>
                        <field name="count_in_hours" invisible="1"/>
                        <label for="duration" string="Duration"/>
                        <div>
                            <field name="duration" class="oe_inline"/>
                            <span attrs="{'invisible':[('count_in_hours','=',True)]}"> days</span>
                            <span attrs="{'invisible':[('count_in_hours','=',False)]}"> hours</span>
                        </div>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="approve"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="department_id"/>
                    </group>
                    <group>
                        <field name="category_id"/>
                    </group>
                </group>
                <div class="text-left">
                   <button name="populate" string="Populate" type="object" class="btn-primary"/>
                </div>
                <notebook>
                    <page string="Employees">
                        <field name="employee_ids"/>
                    </page>
                </notebook>
                <footer>
                    <button name="create_allocations" string="Create" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
