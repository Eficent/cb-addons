<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="edit_holiday_status_form" model="ir.ui.view">
        <field name="name">hr.holidays.status.form - Add compute fields</field>
        <field name="model">hr.holidays.status</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form" />
        <field name="arch" type="xml">
            <field name="company_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="name" position="after">
                <field name="count_in_hours" />
                <field name="cb_personal_day"/>
            </field>
            <xpath expr="//field[@name='limit']" position="after">
                <field name="exclude_rest_days"/>
            </xpath>
        </field>
    </record>

    <record id="leaves_left_holidays_status_kanban" model="ir.ui.view">
        <field name="name">hr.holidays.status.leaves.left.kanban</field>
        <field name="model">hr.holidays.status</field>
        <field name="arch" type="xml">
            <kanban create="false" delete="false">
                <field name="name"/>
                <field name="hours_taken"/>
                <field name="remaining_hours"/>
                <field name="remaining_leaves"/>
                <field name="leaves_taken"/>
                <field name="count_in_hours"/>
                <field name="limit"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div><strong><field name="name"/></strong></div>
                            <div>
                                <t t-if="record.limit.raw_value">
                                    <span>No limit</span>
                                </t>
                                <t t-elif="record.count_in_hours.raw_value">
                                    <span>Remaining hours: <field name="remaining_hours"/></span>
                                    <span class="pull-right">Hours Taken: <field name="hours_taken"/></span>
                                </t>
                                <t t-else="">
                                    <span>Remaining days: <field name="remaining_leaves"/></span>
                                    <span class="pull-right">Days Taken: <field name="leaves_taken"/></span>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

     <!-- New views for hr.holidays.status to manage personal days -->

    <record id="holidays_status_form_view_2" model="ir.ui.view">
        <field name="name">hr.holidays.status.form2</field>
        <field name="model">hr.holidays.status</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <form string="Personal days">
                <sheet string="Personal days">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Course name"
                                   readonly="1"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Pending Employees">
                            <field name="pending_employees_id">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="job_id"/>
                                    <field name="parent_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="holidays_status_tree_view_2" model="ir.ui.view">
        <field name="name">hr.holidays.status.tree2</field>
        <field name="model">hr.holidays.status</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Personal days" create="false" delete="false">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_holidays_status_2">
        <field name="name">Personal days</field>
        <field name="res_model">hr.holidays.status</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="holidays_status_tree_view_2"/>
        <field name="domain">[('cb_personal_day','=',True)]</field>
    </record>

    <record id="holidays_status_window_tree_2"
            model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field name="view_id" ref="holidays_status_tree_view_2"/>
        <field name="act_window_id" ref="act_open_holidays_status_2"/>
    </record>

    <record id="holidays_status_window_form_2"
            model="ir.actions.act_window.view">
        <field name="view_mode">form</field>
        <field name="view_id" ref="holidays_status_form_view_2"/>
        <field name="act_window_id" ref="act_open_holidays_status_2"/>
    </record>

    <menuitem action="act_open_holidays_status_2"
              id="menu_item_holidays_status_2"
              name="Manage Personal Days"
              parent="hr_holidays.menu_hr_holidays_root"
              sequence="4"/>



</odoo>
