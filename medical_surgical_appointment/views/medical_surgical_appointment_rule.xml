<odoo>

    <record model="ir.ui.view" id="medical_surgical_appointment_rule_form_view">
        <field name="name">medical.surgical.appointment.rule.form (in medical_surgical_appointment)</field>
        <field name="model">medical.surgical.appointment.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Rule's Name" required="True"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Information" name="info_group">
                            <field name="location_id"/>
                            <field name="rule_type"/>
                            <field name="is_blocking" attrs="{'invisible': [('rule_type', '=', False)]}"/>
                        </group>
                        <group name="validity" string="Validity">
                            <field name="validity_start"/>
                            <field name="validity_stop"/>
                        </group>
                    </group>
                    <group name="specifications" string="Rule Type Specifications" attrs="{'invisible': [('rule_type', '=', False)]}">
                        <group attrs="{'invisible': [('rule_type', '=', 'specific')]}">
                            <field name="surgeon_id" attrs="{'required': [('rule_type', '=', 'surgeon')], 'invisible': [('rule_type', '!=', 'surgeon')]}"/>
                            <field name="week_day" attrs="{'required': [('rule_type', 'in', ['day', 'surgeon'])]}"/>
                            <field name="all_day" attrs="{'invisible': [('week_day', '=', False)]}"/>
                            <label for="hour_from" string="From - To" attrs="{'invisible': ['|', ('all_day', '=', True), ('week_day', '=', False)]}"/>
                            <div attrs="{'invisible': [('week_day', '=', False)]}">
                                <div attrs="{'invisible': [('all_day', '=', True)]}">
                                    <field name="hour_from" widget="float_time" class="oe_inline"
                                           attrs="{'required':[('week_day', '!=', False), ('all_day', '=', False)]}"/>
                                    <label string="-" class="oe_inline"/>
                                    <field name="hour_to" widget="float_time" class="oe_inline"
                                           attrs="{'required':[('week_day', '!=', False), ('all_day', '=', False)]}"/>
                                </div>
                            </div>
                        </group>
                        <group attrs="{'invisible': [('rule_type', '!=', 'specific')]}">
                            <label for="specific_from" string="Dates"/>
                            <div>
                                <div>
                                    <field name="specific_from" class="oe_inline"
                                           attrs="{'required': [('rule_type', '=', 'specific')]}"/>
                                    <label string="-" class="oe_inline"/>
                                    <field name="specific_to" class="oe_inline"
                                           attrs="{'required': [('rule_type', '=', 'specific')]}"/>
                                </div>
                            </div>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_surgical_appointment_rule_search_view">
        <field name="name">medical.surgical.appointment.rule.search (in medical_surgical_appointment)</field>
        <field name="model">medical.surgical.appointment.rule</field>
        <field name="arch" type="xml">
            <search>
                <!-- TODO -->
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_surgical_appointment_rule_tree_view">
        <field name="name">medical.surgical.appointment.rule.tree (in medical_surgical_appointment)</field>
        <field name="model">medical.surgical.appointment.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="medical_surgical_appointment_rule_act_window">
        <field name="name">Surgical Appointment Rules</field>
        <field name="res_model">medical.surgical.appointment.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="medical_surgical_appointment_rule_menu">
        <field name="name">Surgical Appointment Rules</field>
        <field name="parent_id"
               ref="medical_surgical_appointment.medical_surgical_appointment_menu"/>
        <field name="action" ref="medical_surgical_appointment_rule_act_window"/>
        <field name="sequence" eval="25"/>
    </record>

</odoo>
