<odoo>

    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.form (in medical_surgical_appointment)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="medical_medication.product_template_form_view"/>
        <field name="arch" type="xml">
            <label for="is_medication" position="after">
                <div attrs="{'invisible': [('type', '!=', 'service')]}">
                    <field name="allow_surgical_appointment"/>
                    <label for="allow_surgical_appointment"/>
                </div>
            </label>
            <notebook position="inside">
                <page name="surgical" string="Surgical" attrs="{'invisible': [('allow_surgical_appointment', '=', False)]}">
                    <group>
                        <group>
                            <field name="surgical_appointment_time" widget="float_time"/>
                            <field name="anesthesia_type"/>
                        </group>
                        <group>
                            <field name="patient_interned"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
